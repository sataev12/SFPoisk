{% extends 'base.html.twig' %}

{% block title %}Détail d'un utilisateur!{% endblock %}

{% block body %}
    <h1>Détail d'un utilisateur</h1>

    <h2> {{ utilisateur }}</h2>
    <p>
        {# Ville : {{ annonce.ville }} <br>
        Prix : {{ annonce.prix }} <br>
        Description : {{ annonce.description }} <br>
        Date création : {{ annonce.dateCreation|date('d.m.Y H:i:s') }} #}
        Mail : {{ utilisateur.email }} <br>
        Commentaires : {% for commentaire in utilisateur.getCommentairesLaisse() %}
            <li>{{ commentaire }}</li>
        {% else %}
            <li>Aucun commentaire trouvé.</li>
        {% endfor %}
            Les annonces publiées : {% for annonce in utilisateur.getAnnoncePublie() %}
            <li><a href="{{ path('show_annonce', {'id': annonce.id}) }}">{{ annonce }}</a></li>
        {% else %}
            <li>Aucune annonces trouvé.</li>
        {% endfor %}
    </p>
{% endblock %}