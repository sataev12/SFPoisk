{% extends 'base.html.twig' %}
{% block title %}Ajouter une annonce!{% endblock %}

{% block body %}
    <div class="form-annonce-block">
        {% if edit %}
            <h1>Editer une annonce</h1>
        {% else %}
            <h1>Ajouter une annonce</h1>
        {% endif %}
    
        {# {{ form (formAddAnnonce)}}  #}
    
        {{ form_start(formAddAnnonce, {'attr': {'class': 'form-inline-annonce'}}) }}
            <div class="row">
                <div class="col-sm">
                    {{ form_row(formAddAnnonce.titre, {'attr': {'class': 'form-control-annonce'}})}}
                </div>
                <div class="col-sm">
                    {{ form_row(formAddAnnonce.ville, {'attr': {'class': 'form-control-annonce'}})}}
                </div>
            </div>
            {{ form_row(formAddAnnonce.prix, {'attr': {'class': 'form-control-annonce'}})}}
            {{ form_row(formAddAnnonce.description, {'attr': {'class': 'form-control-annonce'}})}}
            {{ form_row(formAddAnnonce.categorie, {'attr': {'class': 'form-control-annonce'}})}}
            {{ form_row(formAddAnnonce.images, {'attr': {'class': 'form-control-annonce'}}) }}
            {{ form_row(formAddAnnonce.Valider, {'attr': {'class': 'btn btn-valider-annonce'}})}}
    
        {{ form_end(formAddAnnonce)}}
    </div>
{% endblock %}
